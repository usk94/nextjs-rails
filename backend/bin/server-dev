#!/bin/bash -i

# If the database exists, migrate. Otherwise setup (create and migrate)s

# TODO: Dockerfileに移すか、毎回の必要なかったら削除する？
bundle install
bundle exec rails db:migrate 2>/dev/null || bundle exec rails db:create db:migrate

# If the container has been killed, there may be a stale pid file
# preventing rails from booting up
rm -f tmp/pids/server.pid

bundle exec rails server -p 8080 -b 0.0.0.0
# bundle exec foreman start -f Procfile.dev